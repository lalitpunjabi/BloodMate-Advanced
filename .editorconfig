# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Java files
[*.java]
indent_size = 4
max_line_length = 120
continuation_indent_size = 8

# FXML files
[*.fxml]
indent_size = 4
max_line_length = 120

# CSS files
[*.css]
indent_size = 4
max_line_length = 120

# Properties files
[*.properties]
indent_size = 4

# XML files (including pom.xml)
[*.xml]
indent_size = 4
max_line_length = 120

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
indent_size = 2
trim_trailing_whitespace = false

# SQL files
[*.sql]
indent_size = 4
max_line_length = 120

# Shell scripts
[*.{sh,bat,cmd}]
indent_size = 4

# Configuration files
[.gitignore]
indent_size = 2

# Maven wrapper
[mvnw]
end_of_line = lf

[mvnw.cmd]
end_of_line = crlf