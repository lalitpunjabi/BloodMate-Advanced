                        <Label text="🤖 AI Insights and Predictions" styleClass="card-title"/>
                        <HBox spacing="20">
                            <VBox HBox.hgrow="ALWAYS">
                                <Label text="📈 Demand Forecast (Next 7 Days)" styleClass="ai-section-title"/>
                                <HBox alignment="CENTER_LEFT" spacing="10">
                                    <Label text="High Demand:" styleClass="forecast-label"/>
                                    <Label text="O+, A+" styleClass="forecast-value high"/>
