<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.bloodmate.desktop.controller.SignUpController" 
            styleClass="login-container">
    
    <center>
        <VBox alignment="CENTER" spacing="20" styleClass="login-form-container">
            <!-- Logo and Title -->
            <VBox alignment="CENTER" spacing="15">
                <VBox styleClass="blood-drop-logo" alignment="CENTER" prefWidth="100" prefHeight="110">
                    <ImageView fitWidth="100" fitHeight="110" preserveRatio="true">
                        <image>
                            <Image url="@../../images/blood_drop_large.png" />
                        </image>
                    </ImageView>
                </VBox>
                <Label text="BloodMate" styleClass="login-title"/>
                <Label text="Create Your Account" styleClass="login-subtitle"/>
            </VBox>
            
            <!-- Sign Up Form -->
            <VBox spacing="15" styleClass="login-form">
                <!-- Full Name -->
                <VBox spacing="5">
                    <Label text="Full Name *" styleClass="login-label"/>
                    <TextField fx:id="fullNameField" promptText="Enter your full name" styleClass="login-input"/>
                </VBox>
                
                <!-- Email -->
                <VBox spacing="5">
                    <Label text="Email Address *" styleClass="login-label"/>
                    <TextField fx:id="emailField" promptText="Enter your email" styleClass="login-input"/>
                </VBox>
                
                <!-- Username -->
                <VBox spacing="5">
                    <Label text="Username *" styleClass="login-label"/>
                    <TextField fx:id="usernameField" promptText="Choose a username" styleClass="login-input"/>
                </VBox>
                
                <!-- Password -->
                <VBox spacing="5">
                    <Label text="Password *" styleClass="login-label"/>
                    <PasswordField fx:id="passwordField" promptText="Create a password" styleClass="login-input"/>
                </VBox>
                
                <!-- Confirm Password -->
                <VBox spacing="5">
                    <Label text="Confirm Password *" styleClass="login-label"/>
                    <PasswordField fx:id="confirmPasswordField" promptText="Confirm your password" styleClass="login-input"/>
                </VBox>
                
                <!-- Phone Number -->
                <VBox spacing="5">
                    <Label text="Phone Number *" styleClass="login-label"/>
                    <TextField fx:id="phoneField" promptText="Enter your phone number" styleClass="login-input"/>
                </VBox>
                
                <!-- Blood Type -->
                <VBox spacing="5">
                    <Label text="Blood Type *" styleClass="login-label"/>
                    <ComboBox fx:id="bloodTypeCombo" promptText="Select your blood type" styleClass="login-combo"/>
                </VBox>
                
                <!-- Date of Birth -->
                <VBox spacing="5">
                    <Label text="Date of Birth *" styleClass="login-label"/>
                    <DatePicker fx:id="dobPicker" promptText="Select your birth date" styleClass="login-datepicker"/>
                </VBox>
                
                <!-- Gender -->
                <VBox spacing="5">
                    <Label text="Gender *" styleClass="login-label"/>
                    <HBox spacing="15">
                        <RadioButton fx:id="genderMale" text="Male" styleClass="login-radio"/>
                        <RadioButton fx:id="genderFemale" text="Female" styleClass="login-radio"/>
                        <RadioButton fx:id="genderOther" text="Other" styleClass="login-radio"/>
                    </HBox>
                </VBox>
                
                <!-- Terms Agreement -->
                <VBox spacing="5">
                    <CheckBox fx:id="termsCheckbox" text="I agree to the Terms of Service and Privacy Policy" styleClass="login-checkbox"/>
                </VBox>
                
                <!-- Sign Up Button -->
                <Button fx:id="signUpButton" text="Create Account" styleClass="login-button" onAction="#handleSignUp" maxWidth="Infinity"/>
                
                <!-- Login Link -->
                <HBox alignment="CENTER">
                    <Label text="Already have an account?" styleClass="login-text"/>
                    <Hyperlink fx:id="loginLink" text="Log In" styleClass="login-link" onAction="#handleLoginLink"/>
                </HBox>
            </VBox>
            
            <!-- Footer -->
            <VBox alignment="CENTER" spacing="10">
                <Label text="Â© 2025 BloodMate Inc. All rights reserved." styleClass="login-footer"/>
                <HBox alignment="CENTER" spacing="15">
                    <Hyperlink text="Privacy Policy" styleClass="login-footer-link"/>
                    <Hyperlink text="Terms of Service" styleClass="login-footer-link"/>
                    <Hyperlink text="Help Center" styleClass="login-footer-link"/>
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>